<%= link_to show_plant_url(plant) do %>
<% if plant.images.exists? %>
<div class="plant-thumbnail" style="background-image: url(<%= url_for(plant.images.featured.with_attached_file.first.file) %>)">
<% else %>
<div class="plant-thumbnail"  style="background-color: green;" >
<% end %>

	<div class="thumbnail-name">
		<div class="plant-name"><span><%=plant.scientific_name%><% if plant.hybrid_name.present? %> <span><%=plant.hybrid_name%></span><% end %></span></div>
		<div class="common-name"><span><%=plant.common_name%></span></div>
	</div>
	<div class="thumbnail-description">
		
	</div>
</div>
<% end %>