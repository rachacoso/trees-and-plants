			</div><!--/.row-->
			
		<% end %>
	</div>
	<div id="index-list">
		<div class="thumbnails">
			<% @plants.each do |plant| %>
				<%= render partial: 'shared/plant_thumbnail', locals: {plant: plant} %>
			<% end %>
		</div>
	</div>
