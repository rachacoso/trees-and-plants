<div class="index-container">
	<div id="index-head">
		<%= render partial: 'shared/header' %>
	</div>
	<div id="index-filters">
		<%= form_tag(plants_url, method: "get") do %>
			<div class="row">
				<div class="small-12 columns">
					<h6>Growth Rate</h6>
					<% @growth_rates.each do |growth_rate| %>
					  <%= check_box_tag "plant[growth_rate_ids][]", growth_rate.id, checkFilter('growth_rate_ids', growth_rate.id, @filters), id: "plant_growth_rate_ids_#{growth_rate.id}" %>
					  <%= label_tag("plant_growth_rate_ids_#{growth_rate.id}", growth_rate.growth_rate ) %>
					<% end %>
				</div><!--/.small-12-->
			</div><!--/.row-->
			<div class="row">
				<div class="small-12 columns">
					<h6>Leafing Type</h6>
					<% @leafing_types.each do |leafing_type| %>
					  <%= check_box_tag "plant[leafing_type_ids][]", leafing_type.id, checkFilter('leafing_type_ids', leafing_type.id, @filters), id: "plant_leafing_type_ids_#{leafing_type.id}" %>
					  <%= label_tag("plant_leafing_type_ids_#{leafing_type.id}", leafing_type.leafing_type ) %>
					<% end %>
				</div><!--/.small-12-->
			</div><!--/.row-->
			<div class="row">
				<div class="small-12 columns">
					<h6>Exposures</h6>
					<% @exposures.each do |exposure| %>
					  <%= check_box_tag "plant[exposure_ids][]", exposure.id, checkFilter('exposure_ids', exposure.id, @filters), id: "plant_exposure_ids_#{exposure.id}" %>
					  <%= label_tag("plant_exposure_ids_#{exposure.id}", exposure.exposure ) %>
					<% end %>
				</div><!--/.small-12-->
			</div><!--/.row-->

			<div class="row">
				<div class="small-12 columns">
					<h6>pH</h6>
					<% @phs.each do |ph| %>
					  <%= check_box_tag "plant[ph_ids][]", ph.id, checkFilter('ph_ids', ph.id, @filters), id: "plant_ph_ids_#{ph.id}" %>
					  <%= label_tag("plant_ph_ids_#{ph.id}", ph.ph ) %>
					<% end %>
				</div><!--/.small-12-->
			</div><!--/.row-->
			<div class="row">
				<div class="small-12 columns">
					<h6>Soil Texture</h6>
