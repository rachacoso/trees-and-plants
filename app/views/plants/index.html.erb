		<div class="small-12 columns">
			<h6>Landscape Use</h6>
			<% @landscape_uses.each do |landscape_use| %>
			  <%= check_box_tag "plant[landscape_use_ids][]", landscape_use.id, checkFilter('landscape_use_ids', landscape_use.id, @filters), id: "plant_landscape_use_ids_#{landscape_use.id}" %>
			  <%= label_tag("plant_landscape_use_ids_#{landscape_use.id}", landscape_use.landscape_use ) %>
			<% end %>
		</div><!--/.small-12-->
	</div><!--/.row-->

	<div class="row">
		<div class="small-12 columns">
