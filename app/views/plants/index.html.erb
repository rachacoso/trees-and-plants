					  <%= label_tag("plant_soil_texture_ids_#{soil_texture.id}", soil_texture.soil_texture ) %>
					<% end %>
				</div><!--/.small-12-->
			</div><!--/.row-->

	<div class="row">
		<div class="small-12 columns">
			<h6>Soil Moisture</h6>
			<% @soil_moistures.each do |soil_moisture| %>
			  <%= check_box_tag "plant[soil_moisture_ids][]", soil_moisture.id, checkFilter('soil_moisture_ids', soil_moisture.id, @filters), id: "plant_soil_moisture_ids_#{soil_moisture.id}" %>
